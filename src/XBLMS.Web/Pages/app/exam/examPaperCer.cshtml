@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
        .el-card__body, .el-main{
            padding:15px;
        }
    </style>
}
<div v-if="list && list.length>0">
    <div v-for="(cer,index) in list" v-on:click="btnViewCer(cer)">
        <el-card shadow="hover" class="mb-3">
            <div slot="header">
                <span class="fw-bold text-primary">{{ cer.cerName }}【{{ cer.cerNumber }}】</span>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2">
                <div>
                    <div class="position-relative">
                        <i class="bi bi-award fs-1 text-warning"></i>
                        <span class="position-absolute top-100 start-50 translate-middle mt-1 fs-6">{{ index+1 }}</span>
                    </div>
                </div>
                <div>
                    <div class="fs-5">
                        <div>{{ cer.awartDate }}</div>
                    </div>
                </div>
                <div>
                    <img :src="cer.cerImg" height="50" />
                </div>
            </div>
        </el-card>
    </div>
    <div class="my-5 text-center">
        <small>没有更多了</small>
    </div>
</div>
<div class="pt-10" v-else>
    <el-empty image="/sitefiles/assets/images/nodata.svg" description="暂无证书"></el-empty>
</div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <div class="btn-group">
        <button type="button" class="btn btn-primary rounded-pill" v-on:click="utils.closeLayerSelf"><i class="el-icon-back me-2"></i>返 回</button>
    </div>
</div>
<el-button class="fs-4 p-3" icon="el-icon-search" circle style="position:fixed;right:5%;top:80%;" type="primary" v-on:click="cerDialogVisible=true"></el-button>
<template>
    <el-drawer title="证书查询"
               size="50%"
               :visible.sync="cerDialogVisible"
               direction="btt">
        <div class="text-center px-2">
            <div class="card border mb-6 mb-md-0 shadow-none">
                <div class="card-body border-top py-3">
                    <div class="mt-2 text-dark">
                        <div class="my-3">
                            <el-input clearable prefix-icon="el-icon-search" v-model="form.keyWords" placeholder="关键字" class="w-100"></el-input>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top py-3">
                    <el-button type="primary" plain icon="el-icon-search" v-on:click="btnSearchClick">查 询</el-button>
                    <el-button plain icon="el-icon-close" v-on:click="cerDialogVisible=false">取 消</el-button>
                </div>
            </div>
        </div>
    </el-drawer>
</template>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <div class="btn-group">
        <button type="button" class="btn btn-primary rounded-pill" v-on:click="location.href=utils.getRootUrl('mine')"><i class="el-icon-back me-2"></i>返 回</button>
    </div>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPaperCer.js" type="text/javascript"></script>
}