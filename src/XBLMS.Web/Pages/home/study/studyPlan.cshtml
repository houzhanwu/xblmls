@page
@{
    Layout = "_LayoutHome";
}

<el-card>
    <div v-if="total>0">
        <div v-for="(studyPlan,index) in list" class="row">
            <div v-if="index===0" class="col-xl-12 col-lg-12 col-md-12 col-12">
                <div class="card card-hover position-relative">
                    <div class="position-absolute top-50 end-0 translate-middle-y pe-3">
                        <img width="88" src="/sitefiles/assets/images/status/weikaishi.png" v-if="studyPlan.state==='Weikaishi'" />
                        <img width="88" src="/sitefiles/assets/images/status/xuexizhong.png" v-if="studyPlan.state==='Xuexizhong'" />
                        <img width="88" src="/sitefiles/assets/images/status/yidabao.png" v-if="studyPlan.state==='Yidabiao'" />
                        <img width="88" src="/sitefiles/assets/images/status/yiwancheng.png" v-if="studyPlan.state==='Yiwancheng'" />
                    </div>
                    <div class="row ps-2">
                        <a class="col-4 col-md-4 col-xl-4 col-lg-4 bg-cover rounded-start" :style="{'background-image':'url('+studyPlan.plan.coverImg+')'}" href="javascript:;"></a>
                        <div class="col-8 col-md-8 col-xl-8 col-lg-8">
                            <div class="card-body">
                                <h3 class="mb-2"><a href="javascript:;" class="text-inherit">{{ studyPlan.plan.planName }}</a></h3>
                                <ul class="mb-2 list-inline">
                                    <li class="list-inline-item">
                                        <span class="fw-light fs-5">计划年度：</span><span class="fw-bold text-warning">{{ studyPlan.plan.planYear }}</span>
                                    </li>
                                    <li class="list-inline-item">
                                        <span class="fw-light fs-5">计划学分：</span><span class="fw-bold text-success">{{ studyPlan.totalCredit }}</span>/<span class="fw-light fs-5">{{ studyPlan.plan.planCredit }}</span>
                                    </li>
                                </ul>
                                <ul class="mb-5 list-inline">
                                    <li class="list-inline-item">
                                        <span class="fw-light fs-5">必修课：</span><span class="fw-bold text-success">{{ studyPlan.overCourseTotal }}</span>/<span class="fw-light fs-5">{{ studyPlan.plan.courseTotal }}</span>
                                    </li>
                                    <li class="list-inline-item">
                                        <span class="fw-light fs-5">选修课：</span><span class="fw-bold text-success">{{ studyPlan.overSelectCourseTotal }}</span>/<span class="fw-light fs-5">{{ studyPlan.plan.selectCourseTotal }}</span>
                                    </li>
                                </ul>
                                <div class="row align-items-center g-0">
                                    <div class="col-auto">
                                        <i class="bi bi-calendar-range text-warning"></i>
                                    </div>
                                    <div class="col ms-2">
                                        <span>{{ studyPlan.plan.planBeginDateTimeStr }} -  {{ studyPlan.plan.planEndDateTimeStr }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div v-else class="col-xl-6 col-lg-6 col-md-6 col-6">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-4"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty></el-empty>
    </div>
</el-card>

@section Scripts {
    <script src="/sitefiles/assets/js/home/study/studyPlan.js" type="text/javascript"></script>
}